<%= form_tag('/search', :method => 'get', :name => 'search_form') do %>

  <div class="boxes">

    <div class="box1">

      <span class="box_title">ZONA PARA COMER</span>

      <table class="">
        <% @destinations.each_with_index do |destination,i| %>

          <% if i % 2 == 0 %>
            <tr>
            <% end %>

            <td>
              <label><%= check_box_tag "destinations[]", destination.id %> <%= destination.name %></label>
            </td>

            <% if i % 2 != 0 %>
            </tr>
          <% end %>

        <% end %>

        <td>
          <label><%= check_box_tag('check_all', 'check_all', false, :class => 'check_all') %> Todos</label>
        </td>

        <%= '</tr>'.html_safe %>

    </table>

  </div>

  <div class="box2">

    <span class="box_title">RANGO DE TARIFAS</span>

    <table>
      <% @fares.each_with_index do |fare, i| %>

        <% if i % 2 == 0 %>
          <tr>
          <% end %>

          <td>
            <label><%= check_box_tag "fares[]", fare.id %> <%= fare.name %></label>
          </td>

          <% if i % 2 != 0 %>
          </tr>
        <% end %>

      <% end %>

      <td>
        <label><%= check_box_tag('check_all', 'check_all', false, :class => 'check_all') %> Todos</label>
      </td>

      <%= '</tr>'.html_safe %>		

  </table>

</div>

<div class="box3">

  <span class="box_title">TIPO DE COMIDA</span>

  <table>

    <% @categories.each_with_index do |category, i| %>

      <% if i % 2 == 0 %>
        <tr>
        <% end %>

        <td>
          <label><%= check_box_tag "categories[]", category.id %> <%= category.name %></label>
        </td>

        <% if i % 2 != 0 %>
        </tr>
      <% end %>

    <% end %>

    <td>
      <label><%= check_box_tag('check_all', 'check_all', false, :class => 'check_all') %> Todos</label>
    </td>

    <%= '</tr>'.html_safe %>		

</table>

  </div>

  <div class="clearfix"></div>

</div>

<%= button_tag(type: 'submit', class: 'btn btn-large btn-custom') do %>
  BUSCAR UN RESTAURANT
<% end %>

<% end %>
