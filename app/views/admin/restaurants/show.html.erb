<div class="button-wrapper">
  <%= link_to 'Regresar', admin_restaurants_path, :class => 'btn' %>
  <%= link_to 'Editar', edit_admin_restaurant_path(@restaurant), :class => 'btn' %>
</div>


<table class="table table-bordered table-striped">
  <tr>
    <td width="121">&nbsp;</td>
    <td>
      <h2><%= @restaurant.name %></h2>
    </td>
  </tr>
  <tr>
    <td><b>Calle</b></td>
    <td><%= @restaurant.street %></td>
  </tr>
  <tr>
    <td><b>Colonia</b></td>
    <td><%= @restaurant.district %></td>
  </tr>
  <tr>
    <td><b>Codigo Postal</b></td>
    <td><%= @restaurant.zipcode %></td>
  </tr>
  <tr>
    <td><b>Destino</b></td>
    <td><%= @restaurant.destination.name %></td>
  </tr>
  <tr>
    <td><b>Telefonos</b></td>
    <td><%= @restaurant.phone_area_code.nil? ? '' : "(#{@restaurant.phone_area_code})" %> <%= @restaurant.phone %></td>
  </tr>

  <tr>
    <td><b>Sitio web</b></td>
    <td><%= @restaurant.website.nil? ? '' : "<a href=\"http://#{@restaurant.website.gsub('http://', '')}\" target=\"_blank\">#{@restaurant.website}</a>".html_safe %></td>
  </tr>

  <tr>
    <td><b>Email</b></td>
    <td><%= @restaurant.email %></td>
  </tr>

  <tr>
    <td><b>Rango de tarifas</b></td>
    <td><%= @restaurant.fare.name %></td>
  </tr>

  <tr>
    <td><b>URL de Video</b></td>
    <td><%= @restaurant.video.nil? ? '' : "<a href=\"http://#{@restaurant.video.gsub('http://','')}\" target=\"_blank\">#{@restaurant.video}</a>".html_safe %></td>
  </tr>

  <tr>
    <td><b>Correo de cuenta Paypal</b></td>
    <td><%= @restaurant.paypal %></td>
  </tr>

  <tr>
    <td><b>Descripci√≥n</b></td>
    <td><%= @restaurant.description %></td>
  </tr>
  <tr>
    <td><b>Descripcion como llegar</b></td>
    <td><%= @restaurant.description_place %></td>
  </tr>
  <tr>
    <td><b>Servicios</b></td>
    <td><%= @restaurant.services %></td>
  </tr>
  <tr>
    <td><b>Coordenadas</b></td>
    <td><%= @restaurant.lat %>, <%= @restaurant.lng %></td>
  </tr>
  <tr>
    <td><b>Widget HTML</b></td>
  <td><pre><%= "<script src=\"#{root_url}restaurantes/#{@restaurant.id}.js\" type=\"text/javascript\"></script>" %></pre></td>
    </tr>
    <tr>
      <td><b>Activo</b></td>
      <td><span class="label label-<%= @restaurant.active ? 'success' : 'important' %>"><%= @restaurant.active ? 'Activo' : 'Inactivo' %></span></td>
    </tr>
    <tr>
      <td><b>Categorias</b></td>
      <td>
        <ul>
          <% @restaurant.categories.each do |category| %>
            <li><%= link_to category.name, (can? :manage, Category) ? admin_category_path(category) : '#' %></li>
          <% end %>
        </ul>
      </td>
    </tr>
    <tr>
      <td><b>Fotografias agregadas</b></td>
      <td>
        <% @restaurant.photos.each do |photo| %>
          <div class="photo">
            <%= image_tag photo.data.url(:big), :class => 'img-rounded' %>
          </div>
        <% end %>
      </td>
    </tr>
  </table>


