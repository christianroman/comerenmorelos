<div class="well clearfix">
    <h2 style="display:block; float:left; width:200px; margin-top:10px">Restaurantes</h2>

    <table class="totals pull-right">
	<tr>
	    <td><strong>Total: </strong></td><td><%= @total_restaurants %></td>
	</tr>
	<tr>
	    <td><strong>Activos: </strong></td><td><%= @total_active_restaurants %></td>
	</tr>
	<tr>
	    <td><strong>Inactivos: </strong></td><td><%= @total_inactive_restaurants %></td>
	</tr>
    </table>

</div>

<div class="button-wrapper">
    <%= link_to 'Nuevo Restaurant', new_admin_restaurant_path, :class => 'btn btn-primary' %>
</div>

<%= paginate @restaurants %>

<table class="table table-bordered table-hover">
    <thead>
	<tr>
	    <th>Nombre</th>
	    <th>Dirección</th>
	    <th>Destino</th>
	    <th>Email</th>
	    <th>Tarifa</th>
	    <th></th>
	    <th></th>
	</tr>
    </thead>
    <tbody>
	<% @restaurants.each do |restaurant| %>
	    <tr>
		<td><%= link_to restaurant.name, admin_restaurant_path(restaurant) %></td>
		<td><%= restaurant.street %> <%= restaurant.district %> <%= restaurant.zipcode %></td>
		<td><%= restaurant.destination.name %></td>
		<td><%= restaurant.email %></td>
		<td><%= restaurant.fare.name %></td>
		<td><%= link_to 'Editar', edit_admin_restaurant_path(restaurant), :class => 'btn btn-small' %></td>
		<td><%= link_to 'Eliminar', [:admin, restaurant], method: :delete, data: { confirm: '¿Estas seguro?' }, :class => 'btn btn-small btn-danger' %></td>
	    </tr>
	<% end %>
    </tbody>
</table>

<%= paginate @restaurants %>

<br />
